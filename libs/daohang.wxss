.nav{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  /*border-top: 1px solid #ccc;*/
  background-color: #fff;
  padding-top: 10rpx;
  z-index: 600;
}
.nav>view{
  flex: 1;
  text-align: center;
  padding: 10rpx 0rpx 10rpx 0rpx;
  color:#4a4a4a;
  font-size: 20rpx;
  position: relative;
}
.nav>view image{
  width: 48rpx;
  height: 48rpx;
}
.nav>.scanCode{
  position: relative;
} 
.nav>.scanCode image{
  width: 96rpx;
  height: 96rpx;
  padding: 8rpx;
  border-radius: 50%;
  position: absolute;
  background-color: #fff;
  bottom: 30rpx;
  left: 24rpx;
}
.nav>.scanCode view{
  position: absolute;
  width: 100%;
  text-align: center;
  bottom: 10rpx;
}