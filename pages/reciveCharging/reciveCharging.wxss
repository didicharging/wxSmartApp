@import "/libs/daohang.wxss";
page{
  font-family: "Microsoft YaHei";
  font-size: 32rpx;
}

.rectangle{
  position:relative;
  width: 100%;
  background: #ffd843;
}

/*设备描述  */
.device{
  padding-top:40rpx; 
  width: 100%;
  display: flex;
  justify-content:center;
  padding-bottom:47rpx; 
}


.device image{
  width: 200rpx;
  height: 200rpx;
} 

.device .desc{
   margin-left: 30rpx;
   display: flex;
   justify-content: center;
   flex-direction: column;
}


.recharge{
   width: 100%;
   height: 300rpx;
   padding-left:23rpx; 
}

.recharge .title{
  font-size: 36rpx;
  font-weight: 600;
  color: #666;
  padding: 32rpx 0rpx 20rpx 0rpx;
}


.radio-group {

 position: relative;
 width: 100%;
 display: flex;
 flex-wrap: wrap;
 justify-content:center;
 
}  

 .radio-group .item { 
   padding-top:20rpx; 
   width: 30%;
}

 .radio-group text {
   position: relative;
   left: 60rpx;
   top: -30rpx;
   width: 30%;
   color: red;
}




.input-money{
  width: 450rpx;
  text-align: center;
  margin: 0 auto;
  padding: 16rpx 0rpx;
  color: #ccc;
  background-color: #f2f2f2;
  border-radius: 16rpx;
}
.submit{
  width: 450rpx;
  height:50rpx;
  text-align: center;
  margin: 0 auto;
  padding: 16rpx 0rpx;
  color: #666;
  background-color: #f4d000;
  border-radius: 16rpx;
  margin-top: 80rpx;
  font-weight: 600;
}
.input-box{
  border-bottom: 1px solid #e6e6e6;
  display: none;
  padding-top:50rpx; 
}
.input-box text{
  font-size: 80rpx;
  vertical-align: bottom;
}
.input-box input{
  display: inline-block;
  width: 400rpx;
  font-size: 76rpx;
  height: 76rpx;
  vertical-align: middle;
  margin-left: 30rpx;
  position: relative;
  top: 20rpx;
}
.recharge .item .on{
  background-color: #f4d000;
}
.recharge .item .on view{
  color: #fff;
}
.recharge .on{
  display: flex;
}
.des{
  margin-top: 80rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.des .content{
  display: flex;

}
