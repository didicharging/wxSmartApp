/* pages/user/notice/notice.wxss */
page{
  background-color: #f0f0f0;
}
.nav-btn-group{
  text-align: center;
  margin: 24rpx 0rpx;
}
.btn-group{
  display: inline-block;
  width: 550rpx;
  text-align: center;
  border-radius: 18rpx;
  overflow: hidden;
}
.btn-group .flex-row{
  display: flex;
}
.btn-group .flex-row>view{
  flex: 1;
  background-color: #fff;
  font-size: 32rpx;
  padding: 18rpx 0rpx;
}
.btn-group .flex-row>view.on{
  background-color: #fae003;
}
.content{
  width: 100%;
  height: 1072rpx;
}
.content .item{
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  position: relative;
}
.content .item .tip{
  position: absolute;
  top: 15rpx;
  left: 90rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
}
.content .item image{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  vertical-align: top;
  margin-right: 20rpx;
}
.item .nick{
  display: inline-block;
  font-size: 32rpx;
  line-height: 80rpx;
}
.item .time{
  float: right;
  color: #999;
  line-height: 80rpx;
}