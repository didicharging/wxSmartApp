@import "/libs/daohang.wxss";
page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
  background-color: #e9e9e9;
}
.header{
  padding: 40rpx 0rpx 10rpx 0rpx;
  background-color: #fff;
}

.header .block {
  /* text-align: left; */
  margin-left: 30rpx;
  text-align:center;
}

.header .block .img-box{
  display: inline-block;
  /* width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  border: 2rpx solid #b0b0b0; */
  margin: 0 auto;
}
.header .block image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  /* border: 2rpx solid #FFF; */
}
.header .block .backicon{
  position: absolute;
  top: 80rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.header .block text{
  font-size: 32rpx;
  margin-left: 30rpx;
  position: relative;
  top: 6rpx;
  color: #333;
}
.header .item{
  font-size: 24rpx;
  color: #333;
}
.list-group{
  text-align: center;
  background: #fff;
  width: 100%;
}
.list-item{
  width: 80%;
  height: 100rpx;
  background-color: #fff;
  border-top:3rpx #d8d8d8 solid;
  line-height: 100rpx;
  text-align: left;
  margin: 0 auto;
}
.list-item1{
  margin-bottom: 10rpx;
  padding: 24rpx 30rpx;
  /* background-color: #fff; */
}
.list-text1{
  color: #ccc
}
.list-item>view{
  display: inline-block;
}
.list-text{
  font-size: 32rpx;
  position: relative;
  top: 4rpx;
  margin-left: 10rpx;
}
.list-icon image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.list-back{
  float: right;
  /* margin-right: 30rpx; */
}
.list-back image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.items{
  padding: 0rpx 70rpx;
  display: flex;
  flex-direction: row;
}
.coin{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
}

.items .item{
  font-size: 32rpx;
  padding: 30rpx 0rpx;
  display: inline-block;
  flex: 1;
  text-align: center;
}
.items .item:first-child{
    flex: none;
    width: 230rpx;
}
.notice .tip{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: red;
  position: relative;
  top: -10rpx;
  margin-left: 6rpx;
}
.character-box{
  width: 100%;
  height: 137rpx;
}
.character-one{
  width: 100%;
  height: 70rpx;
  text-align: center;
  padding-top:10rpx; 
}
.character-one text{
  line-height: 70rpx;
  margin-left: 20rpx;
}
.character-tow{
  width: 100%;
  height: 67rpx;
  text-align: center;
}
.tow-met{
  font-weight: 500;
  font-size: 37rpx;
  color: #000;
}
.character-tow .tow-meth{
  color: #9b9b9b;
  font-size:32rpx; 
}
.character-tow text{
  margin-left: 10rpx
}