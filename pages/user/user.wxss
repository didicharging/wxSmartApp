@import "/libs/daohang.wxss";
page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
  background-color: #f2f2f2;
}
.header{
  padding: 30rpx 0rpx 10rpx 0rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.header .block {
  /* text-align: left; */
  margin-left: 30rpx;
}
.header .block .img-box{
  display: inline-block;
  /* width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  border: 2rpx solid #b0b0b0; */
}
.header .block image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  /* border: 2rpx solid #FFF; */
}
.header .block .backicon{
  position: absolute;
  top: 80rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.header .block text{
  font-size: 32rpx;
  margin-left: 30rpx;
  position: relative;
  top: 6rpx;
  color: #333;
}
.header .item{
  font-size: 24rpx;
  color: #333;
}
.list-item{
  margin-bottom: 10rpx;
  padding: 24rpx 30rpx;
  background-color: #fff;
}
.list-item1{
  margin-bottom: 10rpx;
  padding: 24rpx 30rpx;
  /* background-color: #fff; */
}
.list-text1{
  color: #ccc
}
.list-item>view{
  display: inline-block;
}
.list-text{
  font-size: 32rpx;
  position: relative;
  top: 4rpx;
  margin-left: 10rpx;
}
.list-icon image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.list-back{
  float: right;
  /* margin-right: 30rpx; */
}
.list-back image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.items{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
}
.coin{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
}

.items .item{
  font-size: 32rpx;
  padding: 20rpx 0rpx;
  display: inline-block;
  flex: 1;
  text-align: center;
}
.items .item:first-child{
    flex: none;
    width: 300rpx;
}
.notice .tip{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: red;
  position: relative;
  top: -10rpx;
  margin-left: 6rpx;
}
