<view class="rectangle">
  <image src="{{IMG_PATH}}/juxing4.png"></image>


  <view class="device">


    <view class="deviceNo">设备编号：{{device.deviceNo}}</view>
    <view class="deviceName">设备名称：{{device.name}}</view>

    <view class="sh">设备押金：￥{{device.shareMoney}} </view>

    <view class="rental">计费方式：租金按{{rentalType}}计费，单价{{rental}}嘀嘀币</view>

    <view class="status">
      <text>设备状态：</text>
      <block wx:if="{{device.state!=99}}">
        <text class='enoughElc'>设备正常</text>
      </block>
      <block wx:if="{{device.state==99}}">
        <text class='LessElc'>设备损坏</text>
      </block>
    </view>

  </view>

</view>




  <view class='user'>
    <button bindtap="changeDevice" type="primary">换电</button>
    <button bindtap="reciveDevice" type="primary">租电</button>

  </view>
