.header .block .nick{
  font-size: 32rpx;
}
.header .block .local{
  position: relative;
  /* left: -6rpx; */
  color: #666;
}
.header .block .local image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.btn-group{
  display: flex;
  /* margin-bottom: 30rpx; */
}
.btn-item{
  flex: 1;
  text-align: center;
}
.btn-item view{
  display: inline-block;
  width: 180rpx;
  padding: 8rpx 0rpx;
  border-radius: 16rpx;
  border: 1px solid #9b9b9b;
}
.btn-item view image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
  margin-right: 8rpx;
}
.content{
   /* margin-top: 30rpx;  */
}
.content .share-img image{
  width: 100%;
  display: block;
}
.content .text{
  padding: 8rpx 30rpx;
  padding-bottom: 30rpx;
  color: #000;
  background-color: #fff;
  font-size: 30rpx;
}
.content .act-list{
  padding: 12rpx 30rpx;
  display: flex;
  padding-top: 30rpx;
  background-color: #fff;
}
.content .comment-list{
  padding: 12rpx 30rpx;
  background-color: #fff;
}
.content .img-list{
  display: inline-block;
  width: 490rpx;
}
.content .comment{
  padding: 30rpx 30rpx;
}
.content .up{
  display: inline-block;
  text-align: right;
  width: 200rpx;
  position: relative;
  top: 18rpx;
}
.content .up text{
  font-size: 32rpx;
  position: relative;
  top: 4rpx;
  vertical-align: top;
}
.content .up image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  vertical-align: top;
}
.content .up button{
  display: inline-block;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 0;
  width: auto;
  height: auto;
  background-color: #fff;
  vertical-align: top;
}
.content .up button::after{
  content: none;
}
.content .up .up-list{
  margin-left: 60rpx;
  margin-right: 0rpx;
}
.content .img-list image{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  vertical-align: middle;
}
.content .comment-list>view{
  padding: 6rpx 0rpx;
}
.content .comment-list .name{
  color: #333;
  font-weight: 600;
  font-size: 32rpx;
}
.content .comment-list .desc{
  color: #666;
  font-size: 32rpx;
}
.content .comment .input-box{
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
}
.content .comment .input-box input{
  display: inline-block;
  width: 540rpx;
  position: relative;
  top: 4rpx;
}
.push-content{
  display: inline-block;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  margin-left: 16rpx;
  vertical-align: top;
  background-color: #e0e0e0;
  position: relative;
  /* top: -15rpx; */
}
.push-on{
  background-color: #ec0c0c;
  color: #fff;
}
.share-btn{
    position: fixed;
    width: 100%;
    bottom: 0;
    z-index: 1000;
}
.share-btn button{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 600;
    background-color: #ec0c0c;
    color: #fff;
    margin: 0;
    border: none;
    border-radius: 0;
}

.banner{
  width: 750rpx;
  height: 310rpx;
}
.banner swiper{
  height: 310rpx;
}
.banner image{
  width: 750rpx;
  height: 310rpx;
}

