@import "/libs/daohang.wxss";
page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
   padding-bottom: 30rpx; 
   background-color: #f3f3f3;
}
.content{
    margin-bottom: 110rpx;
}
.header{
  padding: 0rpx 30rpx 10rpx 30rpx;
  background-color: #fff;
}
.header .block{
  display: inline-block;
}
.header .user-info{
  position: relative;
  top: 20rpx;
  margin-left: 20rpx;
}
.go-home{
    display: block;
    position: absolute;
    left: 50rpx;
    top: 30rpx;
    z-index: 100;
    background: rgba(250, 224, 3, 0.4);
    color: #fff;
    width: 90rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    border-radius: 50%;
}
.hide{
    display: none;
}
.header image{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.location{
  /*position: relative;*/
    /*background-color: #fff;*/
    /*top: -20rpx;*/
    /*left: 60rpx;*/
    /*padding-bottom: 20rpx;*/
  /*margin-left: 20rpx;*/
    
    color: #666;
}
.location image{
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    /*margin-left: 30rpx;*/
    position: relative;
    top: 4rpx;
}
.xiu-box{
    float: right;
    position: relative;
    top: 30rpx;
}
.xiu-box image{
    width: 100rpx;
    display: inline-block;
    position: absolute;
    left: -80rpx;
    top: -10rpx;
    z-index: 100;
}
.xiu-box view.xiu button{
    /* padding: 10rpx; */
    position: relative;
    z-index: 50;
    border-radius: 30rpx;
    /*width: 180rpx;*/
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #fff;
   text-align: center;
    background-color: #ec0c0c;
}
