/* pages/map/map.wxss */
 @import "/libs/daohang.wxss"; 

map{
   position: relative;
  
}

 .mask{
     display: none;    
 }
 .mask{
  display: none;
  position: fixed; 
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999; 
} 

.mask-on{
  display: block;
}
cover-view{
  font-size: 40rpx;
  color:#5D5D5D;
}


.mask-on .container{
  
  position: relative;
  width: 90%;
  margin-top: 30%;
  margin-left: 5%;
  padding-bottom: 5%;
  padding-top: 1%;
  /* border: 1px solid #d1b381; */

}



.mask-on .desc{
  width: 90%;
  padding-left: 10%;
  border-radius: 20rpx;
  background-color: #fff;

}

.station-desc{

  padding: 20rpx 20rpx;

}

.chargeMan-desc{


  padding: 20rpx 20rpx;
}

.phone-desc{


  padding: 20rpx 20rpx;
}

.address-desc{


  padding: 20rpx 20rpx;
}


.find{

  margin-top:40rpx; 
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
 
}

.find button{
    width: 40%;
    height: 100rpx;
    color: black;
    font-size: 40rpx;
    background-color:#FFD843;
}


 .close-mask{
  text-align: right;
  position: relative;
   right: 30rpx;

} 
 .close-mask image{
  width: 60rpx; 
