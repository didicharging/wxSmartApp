page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
}
image{
  width: 750rpx;
  height: 722rpx;
}
.header .name{
  padding: 24rpx 30rpx;
  font-weight: 600;
}
.header .name .follow{
  padding: 8rpx 16rpx;
  background-color: #f4d000;
  color: #fff;
  border-radius: 8rpx;
  float: right;
  position: relative;
  top: -8rpx;
  font-weight: 400;
}
.header .address{
  padding: 0rpx 30rpx;
  font-size: 24rpx;
  color: #666;
}
.items{
   padding: 24rpx 30rpx;
}
.items .item{
  font-size: 24rpx;
  display: inline-block;
  margin-left: 30rpx;
  color: #999;
}
.items .item image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.items .item:first-child{
  margin-left: 0rpx;
}
