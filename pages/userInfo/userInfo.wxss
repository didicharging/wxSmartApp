page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
  color: #666;
}
.placeholder{
  font-family: "Microsoft YaHei";
}
.header{
  text-align: center;
  padding: 60rpx;
}
.header image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #f4d000;
}
.content .item{
  padding: 24rpx 40rpx 24rpx 40rpx;
  border-bottom: 1px solid #d1d1d1;
}
.content .item>view{
  display: inline-block;
  vertical-align: top;
}
.item .title{
  width: 180rpx;
  position: relative;
  top: 6rpx;
}
.item .info{
  width: 490rpx;
  text-align: right;
}
.item .info .radio{
  margin-left: 20rpx;
}
.item .info input{
  display: block;
  width: 490rpx;
  position: relative;
}
.submit{
  width: 450rpx;
  background-color: #f4d000;
  color: #fff;
  margin: 80rpx auto 0rpx auto;
  text-align: center;
  font-size: 32rpx;
  padding: 16rpx 0rpx;
  border-radius: 16rpx;
}
.mask{
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 999;
}
.mask-on{
  display: block;
}
.mask .container{
  position: relative;
  top: 15%;
  padding: 140rpx 30rpx 100rpx 30rpx;
  border: 1px solid #d1b381;
  width: 580rpx;
  margin: 0rpx 50rpx; 
}
.phone-box input{
  background-color: #fff;
  width: 540rpx;
  padding: 20rpx 20rpx;
}
.test-box{
  margin-top: 40rpx;
}
.test-box input{
  background-color: #fff;
  display: inline-block;
  width: 240rpx;
  padding: 20rpx 20rpx;
  vertical-align: top;
}
.test-box view{
  background-color: #fff;
  display: inline-block;
  width: 220rpx;
  color: #d1b381;
  padding: 27rpx 20rpx 28rpx 20rpx;
  margin-left: 40rpx;
  text-align: center;
}
.test-sub{
  width: 540rpx;
  margin-top: 60rpx;
  padding: 28rpx 20rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  background-color: #d1b381;
}
.close-mask{
  text-align: right;
}
.close-mask image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}