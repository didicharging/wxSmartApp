page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
}
.scroll-box{
  height: 1206rpx;
}
.item{
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #ccc;
}
.item>view{
  display: inline-block;
}
.item .img{
  width: 120rpx; 
}
.item .img image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  vertical-align: bottom;
}
.item .info{
  width: 350rpx;
}
.item .operations{
 width: 220rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
}
.flex-item{
  flex: 1;
  text-align: center;
}
.flex-item image{
  width: 28rpx;
  height: 28rpx;
}