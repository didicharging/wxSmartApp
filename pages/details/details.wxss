/* pages/walletLog/walletLog.wxss */
page{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
  /* background: #d8d8d8; */
  background: #f0f0f0;
}
.flex-box{
  display: flex;
  flex-direction: row;
  border-bottom: 5rpx solid #f0f0f0;
  background: #fff;
}
.flex-box view{
  flex: 1;
  text-align: center;
}
.flex-box view text{
  font-size: 35rpx;
  display: inline-block;
  padding: 20rpx 10rpx;
  vertical-align: top;
}
view.on text{
  /*margin-top: 8rpx;
  padding: 15rpx 10rpx 20rpx 10rpx;*/
  border-bottom: 10rpx solid #f4d000;
  /* background-color: #f4d000;
  color: #fff; */
}
.content-box{
  width: 100%;
  height: 100rpx;

}
.content-box .item{
  padding: 30rpx 20rpx;
   font-size: 32rpx;
  border-bottom: 1px solid #ccc;
  height: 70rpx; 
  background: #fff;
}
.price{
  height: 100%;
  float: right;
  position: relative;
  top: -30rpx;
}
.coin{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin-right: rpx;
  vertical-align: middle;
  position: relative;
  top: -5rpx;
  float: left;
  line-height: 80rpx;
}
.text{
  font-size: 25rpx;
  color: #adadad;
  margin-left: 10rpx;
  float: left;
}
.tex{
  float: left;
  display: block;
  width: 70%;
  margin-left: 10rpx;
}
.dev-item{
  
}
.img-box{
  width: 80rpx;
  height: 80rpx; 
  float: left;
  margin-top: -5rpx;
  margin-right: 10rpx;
}
.img-box image{
  width: 80rpx;
  height: 80rpx;
}
.dev-info{
  float: left;
}
.title-one{
  font-weight: 500;
  margin-left: 10rpx;
  margin-right: 25rpx; 
  font-size: 34rpx;
}
.met{
  font-size: 27rpx;
}
.title-tow{
  font-size: 25rpx;
  color: #9e9e9e;
  margin-left: 10rpx;
}
.arrows{
  /* font-size: 45rpx; */
  float: right;
  margin-left: 15rpx;
  color: #c7c6cc;
  /* margin: 72rpx;  */
  border-left: 5rpx solid; 
  border-bottom: 5rpx solid;  
  width: 20rpx; 
